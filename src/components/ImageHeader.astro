---
import Navbar from './Navbar.astro';
import ScrollDown from './ScrollDown.astro';

const { title, subtitle, background } = Astro.props;
---

<div class="header" style={` background-image: url(${background}); `}>
  <Navbar />
  <div class="black"></div>
  <div
    class="titles"
    data-aos-delay="800"
    data-aos-duration="800"
    data-aos="fade-up"
  >
    <h1>{title}</h1>
    <p class="subtitle">{subtitle}</p>
  </div>
  <ScrollDown />
</div>

<style>
  .header {
    background-repeat: no-repeat !important;
    background-position: center !important;
    background-size: cover !important;
    width: 100%;
    height: 100vh;
    margin-top: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-flow: column;
  }
  .titles {
    font-size: 30px;
    color: white;
    text-align: center;
    text-decoration: underline;
    text-decoration-color: var(--blue);
    margin-bottom: 20%;
    margin-top: 20%;
    width: fit-content;
    margin-left: auto;
    margin-right: auto;
    z-index: 2;
  }
  /* Mini Subtitle Text */
  .subtitle {
    font-size: 25px;
  }
  .black {
    background: black;
    opacity: 50%;
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 1;
  }
</style>

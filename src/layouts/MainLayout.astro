---
import Footer from '../components/Footer.astro';
import { SEO } from 'astro-seo';
import '@fontsource/poppins';
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description="The official website for the Knight Owls FIRST robotics team from Toronto, Canada"
      extend={{
        // extending the default link tags
        link: [{ rel: 'icon', href: '/favicons/favicon.ico' }],
        // extending the default meta tags
        meta: [
          {
            name: 'viewport',
            content: 'width=device-width, initial-scale=1.0',
          },
          { name: 'theme-color', content: '#5ccbff' },
        ],
      }}
      openGraph={{
        basic: {
          title: 'The Knight Owls',
          type: 'website',
          image: '/favicons/favicon.ico',
          url: 'https://knightowls.ca',
        },
        optional: {
          description:
            'The official website for the Knight Owls FIRST robotics team from Toronto, Canada',
        },
        image: {
          width: 1200,
          height: 630,
          alt: "An owl standing on a tree branch at night wearing a knight's helmet",
        },
      }}
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicons/apple-touch-icon.png?v=2"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicons/favicon-32x32.png?v=2"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicons/favicon-16x16.png?v=2"
    />
    <link rel="manifest" href="/favicons/site.webmanifest?v=2" />
    <link
      rel="mask-icon"
      href="/favicons/safari-pinned-tab.svg?v=2"
      color="#5bbad5"
    />
    <link rel="shortcut icon" href="/favicons/favicon.ico?v=2" />
    <meta name="msapplication-TileColor" content="#2b5797" />
    <meta
      name="msapplication-config"
      content="/favicons/browserconfig.xml?v=2"
    />
    <meta name="theme-color" content="#ffffff" />

    <link rel="stylesheet" href="/css/mobile.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  </head>
  <body>
    <slot />
    <Footer />
    <style>
      :root {
        --onyx: #424241;
        --shinygrey: #8e9196;
        --vividblue: #5ccbff;
      }
      /* Entire Scrollbar */
      ::-webkit-scrollbar {
        width: 15px;
      }
      /* Draggy Thingy */
      ::-webkit-scrollbar-thumb {
        background: #8c8c8c;
      }
      html,
      body {
        margin: 0;
        padding: 0;
        scroll-behavior: smooth;
        font-family: 'Poppins', sans-serif;
        overflow-x: hidden;
      }
      .header {
        background-repeat: no-repeat !important;
        background-position: center !important;
        background-size: cover !important;
        width: 100%;
        height: 100vh;
        margin-top: auto;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-flow: column;
      }
    </style>
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      AOS.init({
        duration: 600,
        delay: 100,
        once: true,
        offset: 50,
      });
    </script>
  </body>
</html>

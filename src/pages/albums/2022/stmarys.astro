---
//@ts-ignore
import { Picture } from 'astro-imagetools/components';
import MainLayout from '../../../layouts/MainLayout.astro';
import ImageHeader from '../../../components/ImageHeader.astro';
const images = await Astro.glob('../../../media/albums/2022/stmarys/*.jpg');
console.log(images);
---

<MainLayout title="Knight Owls - St. Mary's Regionals Gallery">
  <ImageHeader
    title="Regional Event - St. Mary's"
    background="/images/headers/gallery.webp"
  />
  <section id="gallery">
    {
      images.map((image) => (
        <div data-aos="fade-up">
          <Picture
            src="/src/media/albums/2022/stmarys/1.jpg"
            alt="An image in the gallery"
            format={['webp']}
            placeholder="blurred"
          />
        </div>
      ))
    }
  </section>
</MainLayout>
<style>
  @media screen and (max-width: 600px) {
    #gallery {
      grid-template-columns: auto auto !important;
    }
  }

  #gallery {
    display: grid;
    grid-template-columns: auto auto auto;
  }
  #gallery img {
    width: 90%;
    height: auto;
    padding-top: 1.5%;
    padding-bottom: 1.5%;
    align-self: center;
    justify-self: center;
  }
  #gallery iframe {
    width: 90%;
    padding-top: 1.5%;
    padding-bottom: 1.5%;
    align-self: center;
    justify-self: center;
  }
</style>
